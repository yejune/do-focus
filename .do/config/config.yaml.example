# Do 통합 설정 예시
# 이 파일을 config.yaml로 복사하여 사용하세요
# cp config.yaml.example config.yaml

do:
  version: ""  # Do 버전 (자동 설정됨)
  name: "Do"  # 프로젝트 이름
  description: "Claude Code 프로젝트 환경"  # 프로젝트 설명

user:
  name: ""  # 사용자 이름 (예: "Max", "홍길동")

language:
  conversation: en  # 대화 언어: ko (한국어), en (영어), ja (일본어), zh (중국어)
  code_comments: en  # 코드 주석 언어: ko, en
  documentation: en  # 문서 언어: ko, en

style: pair  # 응답 스타일: sprint (간결), pair (협업), direct (직설)

agent:
  confirm_changes: false  # true: 수정 후 diff 확인, false: 바로 진행
